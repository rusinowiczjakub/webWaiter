{% extends 'base.html.twig' %}

{% block body %}
    <h1>Order_elements list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order_element in order_elements %}
            <tr>
                <td><a href="{{ path('order_element_show', { 'id': order_element.id }) }}">{{ order_element.id }}</a></td>
                <td>{{ order_element.quantity }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('order_element_show', { 'id': order_element.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('order_element_edit', { 'id': order_element.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('order_element_new') }}">Create a new order_element</a>
        </li>
    </ul>
{% endblock %}
