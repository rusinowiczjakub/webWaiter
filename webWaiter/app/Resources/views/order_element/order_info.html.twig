{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Your Order</div>
                    <div class="panel-body">
                        {% if order_elements is not empty %}
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Quantity</th>
                                    <th class="text-center"><strong>Price/</strong>
                                        <small>portion</small>
                                    </th>
                                    <th class="text-center">Total cost</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for element in order_elements %}
                                    <tr>
                                        <td class="col-md-5">
                                            <h4></h4>
                                            <h5>{{ element.meals.mealName }}</h5>
                                            <span></span><span><strong></strong></span>
                                        </td>
                                        <td class="col-md-3"><h5><strong>{{ element.meals.description }}</strong></h5>
                                        </td>
                                        <td class="col-md-1" style="text-align: center">
                                            <div class="input-group center-block">

                                                <p>{{ element.quantity }}</p>

                                            </div>
                                        </td>
                                        <td class="col-md-1 text-center"><strong>{{ element.meals.price }} zł</strong>
                                        </td>
                                        <td class="col-md-1 text-center">
                                            <strong>{{ element.meals.price * element.quantity }}</strong></td>
                                        <td class="col-sm-1 col-md-1">
                                            <a href="{{ path("order_element_delete", {'id':element.id}) }}"
                                               class="btn btn-danger">
                                                <i class="glyphicon glyphicon-remove"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}

                                <td class="text-right"><h5></h5></td>

                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td class="text-center"><h5><strong>{{ order_elements[0].order.price }}</strong></h5>
                                    </td>
                                    <td></td>
                                </tr>
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col-md-4 col-md-offset-8">
                                    <a href="{{ path('client_order_delete') }}" class="btn btn-default">
                                        <span class="glyphicon glyphicon-remove-sign"></span> Cancel your Order
                                    </a>
                                    <a href="{{ path('order_status') }}" class="btn btn-success">
                                        Pay for your Order<span class="glyphicon glyphicon-play"></span>
                                    </a>
                                </div>
                            </div>
                        {% else %}
                            <div class="alert alert-info alert-dismissable">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                                <strong>Sorry, </strong> You have no orders.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}